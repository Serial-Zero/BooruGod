<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooruGod.MainPage">

    <Grid>
        <Grid x:Name="HamburgerContainer"
              HorizontalOptions="Start"
              VerticalOptions="Start"
              Margin="20,20,0,0"
              WidthRequest="24"
              HeightRequest="24">
            
            <StackLayout Spacing="2" VerticalOptions="Center">
                <Border BackgroundColor="Black" HeightRequest="2" />
                <Border BackgroundColor="Black" HeightRequest="2" />
                <Border BackgroundColor="Black" HeightRequest="2" />
            </StackLayout>
            
            <Button x:Name="MenuButton"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    Clicked="OnMenuClicked" />
        </Grid>

        <Grid x:Name="SidebarOverlay"
              BackgroundColor="Black"
              Opacity="0"
              IsVisible="False">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped" />
            </Grid.GestureRecognizers>
        </Grid>

        <Border x:Name="Sidebar"
                BackgroundColor="White"
                HorizontalOptions="Start"
                VerticalOptions="Fill"
                WidthRequest="250"
                TranslationX="-250">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <StackLayout Grid.Row="0" 
                             Orientation="Horizontal" 
                             Spacing="10" 
                             Margin="20,20,0,0"
                             VerticalOptions="Center">
                    <Image Source="rule34_image.jpeg"
                           WidthRequest="24"
                           HeightRequest="24"
                           Aspect="AspectFit" />
                    <Button x:Name="Rule34Button"
                            Text="Rule34"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            Clicked="OnRule34Clicked" />
                </StackLayout>
                
                <Button x:Name="SettingsButton"
                        Grid.Row="2"
                        Text="Settings"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        Margin="20,0,0,20"
                        Clicked="OnSettingsClicked" />
            </Grid>
        </Border>
    </Grid>

</ContentPage>
