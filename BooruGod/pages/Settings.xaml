<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BooruGod.pages.Settings"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label 
                Text="Settings"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
            
            <Border BackgroundColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label 
                        Text="Rule34 API Configuration"
                        FontSize="18"
                        FontAttributes="Bold" />
                    
                    <Label 
                        Text="API Key:"
                        FontSize="14"
                        FontAttributes="Bold" />
                    <Entry x:Name="ApiKeyEntry"
                           Placeholder="Enter your Rule34 API key"
                           IsPassword="True" />
                    
                    <Label 
                        Text="User ID:"
                        FontSize="14"
                        FontAttributes="Bold" />
                    <Entry x:Name="UserIdEntry"
                           Placeholder="Enter your Rule34 user ID"
                           Keyboard="Numeric" />
                    
                    <Button x:Name="SaveButton"
                            Text="Save Configuration"
                            HorizontalOptions="Fill"
                            Clicked="OnSaveClicked" />
                    
                    <Label x:Name="StatusLabel"
                           Text=""
                           HorizontalOptions="Center"
                           TextColor="Green" />
                </VerticalStackLayout>
            </Border>
            
            <Label 
                Text="To get your API key and user ID, visit:"
                FontSize="12"
                HorizontalOptions="Center" />
            <Label 
                Text="https://rule34.xxx/index.php?page=account&amp;s=options"
                FontSize="12"
                TextColor="Blue"
                HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnApiUrlTapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
